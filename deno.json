{
	"tasks": {
		"fl": "deno lint && deno fmt",
		"run": "deno run mod.ts"
	},
	"lint": {
		"files": {
			"include": ["."],
			"exclude": []
		},
		"rules": {
			"tags": ["recommended"],
			"include": [
				"camelcase",
				"constructor-super",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"getter-return",
				"no-array-constructor",
				"no-unused-vars",
				"no-async-promise-executor",
				"no-await-in-loop",
				"no-case-declarations",
				"no-class-assign",
				"no-compare-neg-zero",
				"no-cond-assign",
				"no-const-assign",
				"no-constant-condition",
				"no-control-regex",
				"no-debugger",
				"no-delete-var",
				"no-deprecated-deno-api",
				"no-dupe-args",
				"no-dupe-class-members",
				"no-dupe-else-if",
				"no-dupe-keys",
				"no-duplicate-case",
				"no-empty",
				"no-empty-character-class",
				"no-empty-enum",
				"no-empty-interface",
				"no-empty-pattern",
				"no-eval",
				"no-ex-assign",
				"no-explicit-any",
				"no-extra-boolean-cast",
				"no-extra-non-null-assertion",
				"no-extra-semi",
				"no-fallthrough",
				"no-func-assign",
				"no-global-assign",
				"no-import-assign",
				"no-inferrable-types",
				"no-inner-declarations",
				"no-invalid-regexp",
				"no-invalid-triple-slash-reference",
				"no-irregular-whitespace",
				"no-misused-new",
				"no-namespace",
				"no-new-symbol",
				"no-obj-calls",
				"no-octal",
				"no-prototype-builtins",
				"no-redeclare",
				"no-regex-spaces",
				"no-self-assign",
				"no-setter-return",
				"no-shadow-restricted-names",
				"no-sparse-arrays",
				"no-this-alias",
				"no-this-before-super",
				"no-unreachable",
				"no-unsafe-finally",
				"no-unsafe-negation",
				"no-unused-labels",
				"no-var",
				"no-window-prefix",
				"no-with",
				"prefer-as-const",
				"prefer-const",
				"prefer-namespace-keyword",
				"require-await",
				"require-yield",
				"use-isnan",
				"valid-typeof"
			],
			"exclude": []
		}
	},
	"fmt": {
		"files": {
			"include": ["."],
			"exclude": []
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
